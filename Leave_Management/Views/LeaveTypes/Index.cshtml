@model IEnumerable<Leave_Management.Models.LeaveTypeVM>

@{
    ViewData["Title"] = "Index";
}

<h1>Leave Types</h1>
<hr/>

<p>
    <a asp-action="Create" class="btn btn-success"><i class="fa fa-plus" aria-hidden="true"></i> Create New</a>
</p>
<table id="tblData" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th style="text-align:right">
                @Html.DisplayNameFor(model => model.DefaultDays)
            </th>
            <th style="text-align:right">
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td style="text-align:right">
                    @Html.DisplayFor(modelItem => item.DefaultDays)
                </td>
                <td style="text-align:right">
                    <a asp-action="Edit" class="btn btn-warning" data-toggle="tooltip" data-placement="top" title="Edit" asp-route-id="@item.Id"><i class="fa fa-pencil" aria-hidden="true"></i></a> 
                    <a asp-action="Details" class="btn btn-info" data-toggle="tooltip" data-placement="top" title="Details" asp-route-id="@item.Id"><i class="fa fa-info" aria-hidden="true"></i></a> 
                    <a asp-action="Delete" class="btn btn-danger" data-toggle="tooltip" data-placement="top" title="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delelete this record?')"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts{
    <script>
        $(document).ready(function () {
            $('#tblData').DataTable();
        });
    </script>
}